<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        style="@style/text_black_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="left"
        android:text="@string/settings_pins" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            style="@style/text_black_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/settings_camera_movement" />

        <ToggleButton
            android:id="@+id/settings_togglebutton_camera_movement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onToggleCameraMovementClicked"
            android:textOff="@string/settings_on"
            android:textOn="@string/settings_off" />

    </LinearLayout>

</LinearLayout>