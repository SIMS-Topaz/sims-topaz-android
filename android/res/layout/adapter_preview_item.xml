<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp" >

    <RelativeLayout
        android:id="@+id/preview_item_linear_layout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/preview_item_image_first_comment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/comment_user_icon"
            android:src="@drawable/ic_user"
            android:scaleType="centerInside" />

        <TextView
            style="@style/text_gray_big"
            android:id="@+id/preview_item_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/preview_item_image_first_comment"
            android:text="Name" />

        <TextView
            style="@style/text_gray_big"
            android:id="@+id/preview_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/preview_item_person_name"
            android:layout_alignParentRight="true"
            android:text="time: 15:52" />
    </RelativeLayout>

    <TextView
        style="@style/text_gray_normal"
        android:id="@+id/preview_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a fake comment" />
    
    <ProgressBar
        android:id="@+id/preview_item_like_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/preview_item_note"
        style="@style/text_gray_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/bulle_note"
        android:gravity="right" />

</LinearLayout>