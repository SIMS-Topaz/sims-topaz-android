<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="4dp" >

    <LinearLayout
        android:id="@+id/comment_linear_layout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/comment_image_first_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:contentDescription="@string/comment_user_icon"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/comment_person_name"
            style="@style/text_black_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Victor HUGO" />

        <TextView
            android:id="@+id/comment_time"
            style="@style/text_black_big"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:gravity="right"
            android:text="11/02/2014" />
    </LinearLayout>

    <TextView
        android:id="@+id/comment_first_comment_text"
        style="@style/text_black_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment_loading" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/gray" />

    <ListView
        android:id="@+id/comment_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_margin="4dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp" >
        <ImageButton
            android:id="@+id/comment_unlike"
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:contentDescription="@string/comment_unlike"
            android:src="@drawable/ic_dislike"
             android:layout_margin="4dp"/>
        <ImageButton
            android:id="@+id/comment_like"
            android:layout_width="34dp"
            android:layout_height="32dp"
            android:contentDescription="@string/comment_like"
            android:src="@drawable/ic_like"
            android:layout_margin="4dp" />


    </LinearLayout>

    <EditText
        android:id="@+id/write_comment_text"
        style="@style/text_gray_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:hint="@string/comment_hint" />

</LinearLayout>