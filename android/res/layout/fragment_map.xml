<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <fragment
        android:id="@+id/place_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="top|left" 
        android:name="com.sims.topaz.PlaceSearchFragment" />

    <!-- Do not remove this! If not the view is flickering on the tablet when the map is opened -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_map_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom" >

        <TextView
            android:id="@+id/banner_not_verified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_banner_not_verified"
            android:layout_margin="8dp" />

    </FrameLayout>

</FrameLayout>