<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:orientation="horizontal"
    android:measureAllChildren="true" >
        
        <AutoCompleteTextView
        	android:id="@+id/autoCompleteTextView"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:hint="@string/search_hint"
        	android:popupBackground="@color/light_gray" />

        <LinearLayout 
            android:layout_alignBottom="@+id/autoCompleteTextView"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/autoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <Button
            android:id="@+id/auto_clear_text"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_clear_text" />
        </LinearLayout>


</RelativeLayout>